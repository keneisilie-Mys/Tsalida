<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginVertical="0.5dp"
    card_view:cardBackgroundColor="@color/for_backgrounds"

    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"


    card_view:cardElevation="0.5dp">

    <LinearLayout
        android:paddingRight="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:id="@+id/index"
            android:layout_weight="1.5"
            android:textAlignment="textEnd"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:gravity="center"
            android:text="1"/>

        <LinearLayout
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/grey"/>

        <LinearLayout
            android:layout_marginVertical="5dp"
            android:layout_width="0dp"
            android:id="@+id/innerLinearLayout"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="10"
            android:orientation="vertical">

            <TextView

                android:id="@+id/angami_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:text="angami"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/english_title"
                android:text="english"
                android:paddingTop="5dp"
                android:paddingBottom="20dp"/>

        </LinearLayout>

        <ImageButton
            android:background="?attr/selectableItemBackgroundBorderless"
            android:id="@+id/favorite_button"
            android:tag="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/favorites_icon"
            android:layout_marginEnd="10dp"
            android:contentDescription="@string/favorite_button"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>