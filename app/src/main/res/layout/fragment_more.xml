<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.MoreFragment"
    android:orientation="vertical"
    android:background="@color/for_backgrounds"
    android:paddingStart="10dp">

    <androidx.cardview.widget.CardView
        android:foreground="?android:selectableItemBackground"
        android:id="@+id/card_view1"
        card_view:cardElevation="0.5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/responsive_icon"
                android:contentDescription="@string/responsive"/>
            <TextView
                android:layout_marginStart="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/responsive"
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:foreground="?android:selectableItemBackground"
        android:id="@+id/card_view2"
        android:layout_marginTop="1dp"
        app:cardElevation="0.5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/end_pages"
                android:contentDescription="@string/end"/>
            <TextView
                android:layout_marginStart="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/end"
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:foreground="?android:selectableItemBackground"
        android:id="@+id/card_view3"
        android:layout_marginTop="1dp"
        card_view:cardElevation="0.5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/support_icon"
                android:contentDescription="@string/support"/>
            <TextView
                android:layout_marginStart="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/support"
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>