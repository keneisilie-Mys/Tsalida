<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Tsalida" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="searchViewStyle">@style/searchViewStyleMyEdit</item>
        <item name="colorPrimary">@color/for_backgrounds</item> <!--This changes the status bar -->

    </style>
    <style name="Theme.Tsalida" parent="Base.Theme.Tsalida" />

    <!-- Overriding the search view background when it is clicked (Removing the bottom horizontal line) -->
    <style name="searchViewStyleMyEdit" parent="Widget.AppCompat.Light.SearchView">
        <item name="queryBackground">@android:color/transparent</item>
        <item name="submitBackground">@android:color/transparent</item>
    </style>
    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/lighter_brown</item>
    </style>

    <!-- Custom Text Appearance -->
    <style name="customTextAppearance" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

</resources>